{
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true,
        "declaration": true
    },
    "exclude": [
        "./spec/**/*"
    ]
}